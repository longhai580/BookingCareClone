<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD </title>
      <!-- Latest compiled and minified CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

      <!-- Latest compiled JavaScript -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
</head>
<body>

        <table class="table table-hover">
            <div class="col-12">User</div>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Address</th>
                <th scope="col">Actions</th>

              </tr>
            </thead>
            <tbody>
              <% for(let i=0; i < dataTable.length; i++) { %>
                <tr>
                  <td><%= dataTable[i].id %></td>
                  <td><%= dataTable[i].email %></td>
                  <td><%= dataTable[i].firstName %></td>
                  <td><%= dataTable[i].lastName %></td>
                  <td><%= dataTable[i].address %></td>
                  <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button" class="btn btn-info btn-edit">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn btn-danger btn-delete">Delete</a>

                  </td>
                </tr>
             <% } %>
            </tbody>
          </table>
</body>
</html>